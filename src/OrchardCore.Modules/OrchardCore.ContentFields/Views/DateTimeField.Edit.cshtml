@model OrchardCore.ContentFields.ViewModels.EditDateTimeFieldViewModel
@using OrchardCore.ContentFields.Settings;
@using OrchardCore.ContentManagement.Metadata.Models

@{
    var settings = Model.PartFieldDefinition.Settings.ToObject<DateTimeFieldSettings>();
}

@{
    // Morph the current shape to the correct editor shape based on its Editor property
    var shape = Model as OrchardCore.DisplayManagement.IShape;
    shape.Metadata.Alternates.Clear();
    shape.Metadata.Type = "DateTimeField_Editor";

    if (!String.IsNullOrEmpty(settings.Editor))
    {
        shape.Metadata.Alternates.Add($"DateTimeField_Editor__{settings.Editor}");
    }
}

@await DisplayAsync(Model)
